{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": ["jest", "node"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "../../apps/queuear/.next/types/**/*.ts",
        "../../dist/apps/queuear/.next/types/**/*.ts",
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "../../libs/components/src/utils.js",
        "../../libs/components/src/textinput.jsx"
    ],
    "exclude": [
        "node_modules",
        "jest.config.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ]
}
